<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">

	<context:property-placeholder location="sport.properties"/>
	<!-- add entry to enable component scanning -->

	<context:component-scan base-package="de.dresden.tu" />
	
	<bean id="fortuneService" class="de.dresden.tu.service.FortuneService"></bean>
	
	<bean id="theCoach" class="de.dresden.tu.model.TennisCoach">
		
		<property name="email" value="${foo.email}"></property>
		<constructor-arg name="service" ref="fortuneService"></constructor-arg>
		
	</bean>
	
</beans>





